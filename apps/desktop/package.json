{
  "name": "@refront/desktop",
  "private": true,
  "version": "0.5.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "REFRONT_ENV=development tauri dev --config src-tauri/tauri.dev.conf.json",
    "tauri:staging": "REFRONT_ENV=staging tauri dev --config src-tauri/tauri.staging.conf.json",
    "tauri:prod": "REFRONT_ENV=production tauri dev",
    "tauri:build:dev": "cross-env REFRONT_ENV=development tauri build --config src-tauri/tauri.dev.conf.json",
    "tauri:build:staging": "cross-env REFRONT_ENV=staging tauri build --config src-tauri/tauri.staging.conf.json",
    "tauri:build:prod": "cross-env REFRONT_ENV=production tauri build",
    "tauri:build:prod:windows": "tauri build",
    "tauri:build:staging:windows": "tauri build --config src-tauri/tauri.staging.conf.json",
    "tauri:build:dev:windows": "tauri build --config src-tauri/tauri.dev.conf.json"
  },
  "dependencies": {
    "@tauri-apps/api": "~2.5.0",
    "@tauri-apps/plugin-deep-link": "~2.3.0",
    "@tauri-apps/plugin-dialog": "~2.2.0",
    "@tauri-apps/plugin-global-shortcut": "~2.2.0",
    "@tauri-apps/plugin-opener": "~2.2.0",
    "@tauri-apps/plugin-process": "~2.2.0",
    "@tauri-apps/plugin-updater": "~2.7.0",
    "@tauri-apps/plugin-upload": "~2.2.0",
    "@tauri-apps/plugin-notification": "~2.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "@tauri-apps/cli": "^2"
  }
}
