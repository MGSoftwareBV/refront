  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "updater:default",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "updater:allow-check",
